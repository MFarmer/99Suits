<%= flash[:errors] %>

<form action="<%= users_url %>" method="POST" enctype="multipart/form-data">

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="avatar">Avatar</label>
  <input id="avatar" type="file" name="user[avatar]">

  <label>First Name</label>
  <input type="text" name="user[fname]" value="<%= @user.fname %>"><br>

  <label>Last Name</label>
  <input type="text" name="user[lname]" value="<%= @user.lname %>"><br>

  <label>E-Mail</label>
  <input type="text" name="user[email]" value="<%= @user.email %>"><br>

  <label>Username</label>
  <input type="text" name="user[username]" value="<%= @user.username %>"><br>

  <label>Password</label>
  <input type="password" name="user[password]" value=""><br>

  <button>Create Account</button>

</form>