<div class="left-col">
  <%= render partial: "account_sidenav" %>
</div>

<div class="main-col">

    <h1>Available</h1>

    <% if @items.count > 0 %>
      <p class="description">
        You currently have <%= pluralize(@items.count, 'item') %> posted for sale. Please choose
      an item to view your listing. You will have the option to edit or remove the listing.
      </p>
      <% @items.each do |item| %>
        <%= render partial: 'thumbnail', :locals => { :item => item } %>
      <% end %>
    <% else %>
      <p class="description">You have no items currently up for sale.</p>
    <% end %>

</div>