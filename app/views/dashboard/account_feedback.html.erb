<div class="left-col">
  <%= render partial: "account_sidenav" %>
</div>

<div class="main-col">
  <h1>Feedback</h1>

  <table border="1">
    <thead>
    <tr>
      <th>Order</th>
      <th>Rating</th>
      <th>Date</th>
      <th>Buyer</th>
      <th>Content</th>
    </tr>
    </thead>
    <tbody>
    <% if @feedback.count > 0 %>
      <% @feedback.each do |feedback| %>
        <tr>
          <td><%= feedback.item.title %></td>
          <td><%= feedback.rating %></td>
          <td><%= feedback.date %></td>
          <td><%= feedback.user.username %></td>
          <td><%= feedback.content %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="5">You have no feedback.</td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>