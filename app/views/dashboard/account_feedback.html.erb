<div class="left-col">
  <%= render partial: "account_sidenav" %>
</div>

<div class="main-col">
  <h1>Feedback</h1>

  <% if @feedback.count > 0 %>
    <table border="1">
      <thead>
      <tr>
        <th colspan="2">Order</th>
        <th>Rating</th>
        <th>Date</th>
        <th>Buyer</th>
        <th>Content</th>
      </tr>
      </thead>
      <tbody>
        <% @feedback.each do |feedback| %>
          <tr>
            <td><%= image_tag feedback.item.photo.url(:thumb) %></td>
            <td><%= feedback.item.title %></td>
            <td><%= feedback.rating %></td>
            <td><%= feedback.created_at %></td>
            <td><%= feedback.order.buyer.username %></td>
            <td><%= feedback.content %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="description">You have no feedback.</p>
  <% end %>
</div>