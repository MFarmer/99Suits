<h1>Leave Feedback</h1>

<table border="1">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Title</th>
      <th>Order Date</th>
      <th>Ship Date</th>
      <th>Seller</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  <% if @orders.count > 0 %>
    <% @orders.each do |order| %>
      <tr>
        <td><%= image_tag order.item.photo.url(:thumb) %></td>
        <td><%= order.item.title %></td>
        <td><%= order.created_at %></td>
        <td><%= order.shipping_date %></td>
        <td><%= full_name(order.item.user) %></td>
        <td></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>