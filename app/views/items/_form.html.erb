<%= flash[:errors] %>

<%= form_for @item, :url => user_items_url(current_user.id), :html => { :multipart => true } do |f| %>

  <%= f.label :photo %>
  <%= f.file_field :photo %><br>

  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :category %>
  <%= f.select :category, Item::CATEGORY_OPTIONS %><br>

  <%= f.label :brand %>
  <%= f.text_field :brand %><br>

  <%= f.label :condition %>
  <%= f.select :condition, Item::CONDITION_OPTIONS %><br>

  <%= f.label :original_price %>
  <%= f.text_field :original_price %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.label :sale_price %>
  <%= f.text_field :sale_price %><br>

  <%= f.label :trade_price %>
  <%= f.text_field :trade_price %><br>

  <%= f.label :allow_pickup %>
  <%= f.check_box :allow_pickup %><br>

  <%= f.label :weight %>
  <%= f.text_field :weight %><br>

  <%= f.label :size %>
  <%= f.text_field :size %><br>

  <%= f.submit %>

<% end %>