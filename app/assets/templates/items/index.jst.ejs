<!-- Shows all of the items available for sale -->

<div class="left-col">
  <ul>
    <li><h1>Feed</h1></li>
    <li>
      <ul>
        <li><a href="#/">All</a></li>
        <li><a href="#/sale">Sale</a></li>
        <li><a href="#/trade">Trade</a></li>
      </ul>
    </li>
    <li><h1>Featured</h1></li>
    <li>
      <ul>
        <li><a href="/dashboard/#/staff_picks">Staff Picks</a></li>
        <li><a href="/dashboard/#/most_liked">Most Liked</a></li>
        <li><a href="/dashboard/#/most_commented">Most Commented</a></li>
        <li><a href="/dashboard/#/most_active_users">Most Active Users</a></li>
        <li><a href="/dashboard/#/newest_users">Newest Users</a></li>
      </ul>
    </li>
  </ul>
</div>

<div class="main-col">
  <button id="refresh">Refresh</button>

  <h1><%= headerTitle %> <small>(<%= items.length %> Items)</small></h1>

  <% items.each(function(item){ %>
    <a href="/items/<%= item.id %>" class="thumbnail">
      <div class="photo-box">
        <img src="<%= item.escape("photo_url") %>">
      </div>
      <div class="description-box">
        <div class="avatar-box">
          <img src="<%= item.escape("user_avatar_url") %>">
        </div>
        <div class="detail-box">
          <p><%= item.escape("title").substr(0,12) %></p>
          <p class="price"><%= item.escape("sale_price") %></p>
        </div>
      </div>
    </a>

  <% }); %>
</div>